# Database Configuration
# For local development with Docker, use localhost:5433
# For Docker Compose deployment, use postgres:5432
DATABASE_URL=postgresql://transcription_user:transcription_pass_dev_123@localhost:5433/transcription_db

# Security (GENERATE NEW KEYS FOR PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-fernet-encryption-key-32-bytes-base64

# Email Configuration (Configure with your SMTP settings)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis (for rate limiting via Docker)
# For local development with Docker, use localhost:6379
# For Docker Compose deployment, use redis:6379
REDIS_URL=redis://localhost:6379/0

# Application Settings
FLASK_ENV=development
MAX_CONTENT_LENGTH=524288000
OTP_EXPIRY_MINUTES=10
RATE_LIMIT_PER_MINUTE=60
